<h2>ジャンル一覧・新規登録</h2>
<h4>新規登録</h4>
<%= form_with model: @genre, url: admin_genres_path do |f| %>
<table class="table table-borderless">
  <%= f.text_field :name, class: "form-control" %>
  <%= f.submit "ジャンルを登録" %>
<% end %>
</table>

<h4>ジャンル一覧</h4>
<table class="table">
  <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
          <td><%= link_to "削除する", admin_genre_path(genre.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
      </td>
    </tr>
  </tbody>
</table>

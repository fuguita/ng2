<h2>商品詳細</h2>
<%= image_tag @item.get_item_image %>
<table class="table table-borderless">
  <tbody>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <td>税抜価格(税抜価格)</td>
      <td><%= @item.tax_in_price %>(<%= @item.price) %>円</td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td><%= @item.active_judge %></td>
    </tr>
    <tr>
      <td><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %></td>
    </tr>
  </tbody>
</table>

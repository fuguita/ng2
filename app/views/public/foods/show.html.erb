        <%= image_tag @food.get_food_image, size: "200x200" %>
      </div>
      <div class="col-6 offset-1">
        <table class="table table-borderless">
          <tbody>
             <tr>
                <td><%= @food.name %></td>
             </tr>
             <tr>
                <td><%= @food.introduction %></td>
             </tr>
             <tr>
                <td><%= @food.tax_in_price %> </td>
             </tr>
            </tbody>
          </table>
          <div class="text-center col-7">
         
          </div>
        </div>
      </div>
    </div>
</div>
<h2>注文情報確認</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @cart_items.each do |cart_item| %>
        <td>
          <%= image_tag cart_item.food.get_food_image, size: "30x30" %>
          <%= cart_item.food.name %>
        </td>
        <td>
          <%= cart_item.food.tax_in_price.to_s(:delimited) %>
        </td>
        <td>
          <%= cart_item.amount %>
        </td>
        <td>
          <%= cart_item.subtotal %>
        </td>
          <% @total += cart_item.subtotal %>
      <% end %>
    </tr>
  </tbody>
</table>
<table class="table table-striped">
  <tbody>
    <tr>
      <th>
        送料
      </th>
      <td>
        <%= @order.shipping_cost %>
      </td>
    </tr>
    <tr>
      <th>
        商品合計
      </th>
      <td>
        <%= @total.to_s(:delimited) %>
      </td>
    </tr>
    <tr>
      <th>
        請求金額
      </th>
      <td>
        <%= (@total+@order.shipping_cost).to_s(:delimited) %>
      </td>
    </tr>
  </tbody>
</table>
<h4>支払方法</h4>
  <%= @order.payment_method_i18n %>
  <h4>お届け先</h4>
  <%= @order.customer_address_display %>
  <%= @order.name %>

  <%= form_with model: @order do |f| %>
    <%= f.hidden_field :customer_id %>
    <%= f.hidden_field :payment_method %>
    <%= f.hidden_field :shipping_cost %>
    <%= f.hidden_field :postal_code %>
    <%= f.hidden_field :address %>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :total_payment, :value => (@order.shipping_cost+@total) %>
    <%= f.submit "注文を確定する", class: "btn btn-success" %>
  <% end %>

